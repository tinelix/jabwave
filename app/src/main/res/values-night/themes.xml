<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ApplicationTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/actionBarColor</item>
        <item name="colorPrimaryVariant">@color/actionBarColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/actionBarColor</item>
        <item name="colorSecondaryVariant">@color/actionBarColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="ApplicationTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ApplicationTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ApplicationTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ApplicationTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ApplicationTheme.Overlay</item>
        <item name="iconTint">@color/accentColor</item>
    </style>

</resources>