<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ApplicationTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accentColor</item>
        <item name="colorPrimaryVariant">@color/accentColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/accentColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="preferenceTheme">@style/ApplicationTheme.Preference</item>
    </style>

    <style name="ApplicationTheme.Dialog.IfTablet" parent="Theme.MaterialComponents.DayNight.DialogWhenLarge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accentColor</item>
        <item name="colorPrimaryVariant">@color/accentColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/accentColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="preferenceTheme">@style/ApplicationTheme.Preference</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ApplicationTheme.NoActionBar" parent="ApplicationTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ApplicationTheme.Toolbar">

    </style>

    <style name="ApplicationTheme.Toolbar.Dark">
        <item name="backgroundColor">?attr/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#86ffffff</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">#86ffffff</item>
        <item name="titleTextStyle">?attr/textAppearanceHeadline3</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ApplicationTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ApplicationTheme.Navigation" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="listPreferredItemHeightSmall">44dp</item>
    </style>

    <style name="ApplicationTheme.Preference" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="tint">?attr/colorAccent</item>
    </style>

    <style name="RosterGroupName">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:drawableLeft">@drawable/ic_arrow_down</item>
    </style>

    <style name="RosterGroupItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RosterGroupItem.Light">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RosterMessageCounter">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:layout_marginEnd">4dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginStart">4dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingStart">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingEnd">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">11dip</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:text"></item>
    </style>

    <style name="ApplicationTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ApplicationTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearanceOverlay"></style>

    <style name="ShapeAppearanceOverlay.Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round8">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round16">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round32">
        <item name="cornerSize">32dp</item>
    </style>

    <style name="ApplicationTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="ApplicationTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ApplicationTheme.Overlay</item>
    </style>

    <style name="ApplicationTheme.Overlay">
        <item name="colorPrimary">@color/accentColor</item>
    </style>

</resources>